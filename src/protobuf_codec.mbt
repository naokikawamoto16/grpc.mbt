///|
/// Encode a protobuf value into bytes using `moonbitlang/protobuf`.
pub fn[T : @protobuf.Write] encode_protobuf(value : T) -> Bytes raise {
  let writer = @buffer.new()
  @protobuf.Write::write(value, writer)
  writer.to_bytes()
}

///|
/// Decode protobuf bytes into a value using `moonbitlang/protobuf`.
pub fn[T : Default + @protobuf.Read] decode_protobuf(bytes : Bytes) -> T raise {
  let reader = @protobuf.BytesReader::from_bytes(bytes)
  let mut decoded = T::default()
  decoded = @protobuf.Read::read(reader)
  decoded
}

///|
/// Build a `Codec` backed by `moonbitlang/protobuf` traits.
///
/// This helper is intended to bridge message types generated by upstream
/// `protoc-gen-mbt` with this gRPC library.
pub fn[Req : @protobuf.Write, Resp : Default + @protobuf.Read] protobuf_codec() -> Codec[
  Req,
  Resp,
] {
  {
    encode: value => {
      let writer = @buffer.new()
      @protobuf.Write::write(value, writer)
      writer.to_bytes()
    },
    decode: bytes => {
      let decoded : Resp = decode_protobuf(bytes)
      decoded
    },
  }
}
